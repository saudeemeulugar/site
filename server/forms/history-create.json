{
  "method": "post",

  "fields": {
    "title": {
      "type": "text",
      "allowNull": false,
      "formFieldAttributes": {
        "label": "Dê um nome à sua história",
        "placeholder": null,
        "help": null
      }
    },
    "body": {
      "type": "html",
      "allowNull": true,
      "formFieldType": "html",
      "formFieldHeight": 300,
      "formFieldAttributes": {
        "label": "Escreva aqui sua história",
        "placeholder": null,
        "help": null
      }
    },
    "category": {
      "type": "vocabulary/tag",
      "vocabularyName": "Category",
      "canCreate": false,
      "formFieldMultiple": true,
      "onlyLowercase": false,
      "formFieldAttributes": {
        "label": "Eixos",
        "placeholder": null,
        "help": "Selecione um eixo relácionado com sua história"
      }
    },
    "tags": {
      "type": "vocabulary/tag",
      "vocabularyName": "Tags",
      "canCreate": true,
      "formFieldMultiple": true,
      "onlyLowercase": true,
      "formFieldAttributes": {
        "label": "Assuntos relacionados",
        "placeholder": null,
        "help": "Escreva ou selecione no máximo 3 assuntos relacionados à história"
      }
    },
    "attachment": {
      "type": "file/file",
      "formFieldMultiple": true,
      "formFieldAttributes": {
        "label": "Arquivos anexos",
        "placeholder": null,
        "help": "Arquivos como textos, planilhas ou apresentações relácionadas com a sua história"
      }
    },

    "locationGroup": {
      "type": "field-group",
      "title": "Localização",
      "description": "Local mais relevante onde a história aconteceu",

      "fields": {
        "country": {
          "type": "hidden",
          "defaultValue": "BR",
          "formFieldAttributes": {
            "label": null,
            "placeholder": null,
            "help": null
          }
        },
        "locationState": {
          "type": "location/state",
          "formCountryFieldName": "country",
          "formFieldAttributes": {
            "label": "Estado",
            "placeholder": null,
            "help": "Estado do Brasil onde a história aconteceu"
          }
        },
        "city": {
          "type": "location/city",
          "formStateFieldName": "locationState",
          "formFieldAttributes": {
            "label": "Cidade",
            "placeholder": null,
            "help": "Cidade onde a história aconteceu"
          }
        }
      }
    },

    "acceptTerms": {
      "type": "boolean",
      "required": true,
      "allowNull": false,
      "defaultValue": false,
      "formFieldAttributes": {
        "label": "Li e aceito os <a target=\"_blank\" href=\"/terms-of-use\">Termos de Uso.</a>",
        "placeholder": null,
        "help": null
      }
    }
  },
  "actions": {
    "next": {
      "type": "submit",
      "defaultValue": "next",
      "formFieldAttributes": {
        "class": "btn btn-primary",
        "label": "Salvar e avançar",
        "placeholder": null,
        "help": null
      }
    }
  }
}
