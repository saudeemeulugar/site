<ol class="breadcrumb">
  <li><a href="/">In√≠cio</a></li>
  <li class="active">{{t 'hotel-card.find'}}</li>
</ol>

<h1>{{t 'hotel-card.find'}}</h1>

<div class="actions">{{we-action-create-btn resourceName req}}</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Documento</th>
      <th>{{t 'actions'}}</th>
    </tr>
  </thead>
  <tbody>

{{#each data}}
  <tr>
    <td>{{id}}</td>
    <td>{{fullName}}</td>
    <td>{{travelDocument}}</td>
    <td>
      <a href="/hotel-card/{{id}}/edit" class="btn btn-default btn-sm" data-we-btn-action="view">
        <i class="glyphicon glyphicon-pencil"></i> Editar e ver
      </a>
      <a href="/hotel-card/{{id}}/print" target="_blank" class="btn btn-default btn-sm" data-we-btn-action="view">
        <i class="glyphicon glyphicon-print text-defalt"></i> imprimir
      </a> |
      <a href="/hotel-card/{{id}}/delete" class="btn btn-default btn-sm" data-we-btn-action="view">
        <i class="glyphicon glyphicon-remove  text-danger"></i> Deletar
      </a>
    </td>
  </tr>
{{/each}}

  </tbody>
  <tfoot>
    <td colspan="4">
      {{paginate count=metadata.count limit=query.limit currentPage=query.page req=req}}
    </td>
  </tfoot>
</table>